{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "dev": {
            "cache": false,
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                ".svelte-kit/**",
                ".nuxt/**",
                ".output/**"
            ]
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                ".svelte-kit/**",
                ".nuxt/**",
                ".output/**"
            ]
        },
        "test": {
            "outputs": [],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "tests/**/*.ts"
            ]
        },
        "lint": {
            "outputs": []
        },
        "publish": {
            "outputs": []
        },
        "type-check": {
            "cache": false,
            "outputs": [
                "dist/**",
                ".next/**",
                ".svelte-kit/**",
                ".nuxt/**",
                ".output/**"
            ]
        }
    }
}