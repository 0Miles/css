{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "dev:iife": {
            "cache": false
        },
        "dev:esm": {
            "cache": false
        },
        "dev:cjs": {
            "cache": false
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "test": {
            "outputs": [],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts"
            ]
        },
        "lint": {
            "outputs": []
        }
    }
}