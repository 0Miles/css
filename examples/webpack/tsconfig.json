{
    "compilerOptions": {
        "outDir": "./sample-dist",
        "baseUrl": "./",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2015",
        "module": "es2020",
        "skipLibCheck": true,
        "lib": [
            "es2021",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}