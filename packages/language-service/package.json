{
    "name": "@master/css-language-service",
    "scripts": {
        "build:cjs": "esbuild src/index.ts --bundle --minify --outfile=dist/index.js --format=cjs --platform=node --external:@master/css --external:js-beautify",
        "build:type": "tsc --emitDeclarationOnly --preserveWatchOutput --outDir dist",
        "build": "npm run build:cjs && npm run build:type",
        "dev": "npm run build -- --watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint src"
    },
    "description": "Master CSS Language Service",
    "author": "Aoyue Design LLC.",
    "license": "MIT",
    "engines": {
        "node": "*"
    },
    "dependencies": {
        "@master/css": "",
        "js-beautify": "^1.14.7"
    },
    "devDependencies": {
        "vscode-css-languageservice": "^6.2.5",
        "vscode-languageserver-types": "^3.17.3"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
        "./settings": "./dist/settings.js"
    },
    "typesVersions": {
        "*": {
            "./": [
                "./dist/index.d.ts"
            ],
            "./settings": [
                "./dist/settings.d.ts"
            ]
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    }
}