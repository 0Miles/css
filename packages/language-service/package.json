{
    "name": "@master/css-language-service",
    "scripts": {
        "build": "techor pack --platform node",
        "dev": "npm run build -- --watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint src"
    },
    "description": "Master CSS Language Service",
    "author": "Aoyue Design LLC.",
    "license": "MIT",
    "engines": {
        "node": "*"
    },
    "dependencies": {
        "@master/css": "",
        "@master/css-compiler": "",
        "js-beautify": "^1.14.7"
    },
    "devDependencies": {
        "vscode-css-languageservice": "^6.2.5",
        "vscode-languageserver-types": "^3.17.3"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./settings": {
            "require": "./dist/settings.js",
            "import": "./dist/settings.js",
            "types": "./dist/settings.d.ts"
        }
    },
    "typesVersions": {
        "*": {
            "./settings": [
                "./dist/settings.d.ts"
            ]
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    }
}
