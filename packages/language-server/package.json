{
    "name": "@master/css-language-server",
    "scripts": {
        "build:cjs": "esbuild src/server.ts --bundle --minify --outfile=dist/server.js --format=cjs --platform=node --external:vscode-languageserver --external:vscode-languageserver-textdocument --external:explore-config --external:js-beautify --external:minimatch --external:@master/css --external:@master/css-language-service",
        "build:type": "tsc --emitDeclarationOnly --preserveWatchOutput --outDir dist",
        "build": "npm run build:cjs && npm run build:type",
        "dev": "npm run build -- --watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint src",
        "test": "jest"
    },
    "description": "Master CSS Language Server",
    "author": "Aoyue Design LLC.",
    "license": "MIT",
    "engines": {
        "node": "*"
    },
    "dependencies": {
        "@master/css": "",
        "@master/css-language-service": "",
        "explore-config": "^2.2.10",
        "js-beautify": "^1.14.7",
        "minimatch": "^9.0.1",
        "vscode-languageserver": "^7.0.0",
        "vscode-languageserver-textdocument": "^1.0.9"
    },
    "main": "./dist/server.js",
    "types": "./dist/server.d.ts",
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    }
}