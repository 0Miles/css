{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "ignoreDeprecations": "5.0",
        "outDir": "src",
        "declaration": true,
    },
    "include": [
        "src/**/*",
        "src/node_modules"
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "public/*"
    ],
    "references": [
        {
            "path": "../css"
        },
        {
            "path": "../theme-service"
        }
    ]
}