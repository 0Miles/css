{
    "name": "@master/css.react",
    "scripts": {
        "build:iife": "esbuild src/index.tsx --bundle --outfile=dist/index.browser.js --format=iife",
        "build:cjs": "esbuild src/index.tsx --bundle --outfile=dist/index.cjs --format=cjs --platform=node",
        "build:esm": "esbuild src/index.tsx --bundle --outfile=dist/index.mjs --format=esm",
        "build": "concurrently 'npm:build:* -- --minify --sourcemap --external:@master/css --external:react' 'tsc --emitDeclarationOnly'",
        "dev": "concurrently 'npm:build:* -- --watch'",
        "lint": "eslint ./src"
    },
    "license": "MIT",
    "description": "React hooks and components for Master CSS",
    "author": "Aoyue Design LLC.",
    "funding": "https://docs.master.co/css/donate",
    "homepage": "https://css.master.co",
    "bugs": {
        "url": "https://github.com/master-co/css/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/css.git",
        "directory": "packages/react"
    },
    "keywords": [
        "react",
        "hooks",
        "use",
        "css",
        "mastercss"
    ],
    "sideEffects": false,
    "main": "./dist/index.cjs",
    "jsnext:main": "./dist/index.mjs",
    "browser": "./dist/index.browser.js",
    "esnext": "./dist/index.mjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "peerDependencies": {
        "react": ">=16.8.0",
        "@master/css": "*"
    }
}
