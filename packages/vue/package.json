{
    "name": "@master/css.vue",
    "scripts": {
        "build:main": "vite build",
        "build:type": "vue-tsc --declaration --emitDeclarationOnly",
        "build": "pnpm run \"/^build:.*/\"",
        "dev": "pnpm run build:main --watch",
        "type-check": "vue-tsc --noEmit",
        "lint": "eslint src"
    },
    "license": "MIT",
    "description": "Integrate Master CSS in React way",
    "author": "Aoyue Design LLC.",
    "funding": "https://docs.master.co/css/donate",
    "homepage": "https://css.master.co",
    "bugs": {
        "url": "https://github.com/master-co/css/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/css.git",
        "directory": "packages/vue"
    },
    "keywords": [
        "styled",
        "component",
        "element",
        "styled-component",
        "vue",
        "hooks",
        "use",
        "css",
        "mastercss",
        "class-name",
        "vuejs",
        "nuxtjs"
    ],
    "sideEffects": false,
    "main": "./dist/index.js",
    "jsnext:main": "./dist/index.js",
    "esnext": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        },
        "./CSSProvider": {
            "require": "./dist/CSSProvider.js",
            "import": "./dist/CSSProvider.mjs",
            "types": "./dist/CSSProvider.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "vue": ">= 3.0.0"
    },
    "dependencies": {
        "@master/css": "workspace:^"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^4.2.3",
        "@vue/tsconfig": "^0.4.0",
        "typescript": "^5.1.6",
        "vite": "^4.4.9",
        "vue-tsc": "^1.8.4"
    }
}