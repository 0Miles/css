{
    "name": "@master/css",
    "scripts": {
        "build": "rm -rf dist && npm run build:cjs && npm run build:esm",
        "build:cjs": "esbuild src/index.ts --outfile=dist/index.js --minify --bundle --format=cjs --sourcemap",
        "build:esm": "tsc",
        "dev:cjs": "esbuild src/index.ts --outfile=dist/index.js --bundle --format=cjs --watch",
        "dev:esm": "tsc --watch",
        "test": "jest",
        "lint": "eslint ./src"
    },
    "devDependencies": {
        "@swc/core": "^1.3.9",
        "@swc/jest": "^0.2.23",
        "@types/jest": "^27.5.2",
        "@types/node": "^18.11.0",
        "@typescript-eslint/eslint-plugin": "^5.40.1",
        "@typescript-eslint/parser": "^5.40.1",
        "dedent": "^0.7.0",
        "esbuild": "^0.15.10",
        "eslint": "^8.25.0",
        "jest": "^28.1.3",
        "ts-jest": "^28.0.3",
        "typescript": "^4.8.4"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=17.1"
    }
}
