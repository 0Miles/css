{
    "scripts": {
        "build": "turbo run build --filter=./packages/**/*",
        "build:clean": "rm -rf ./packages/**/*dist && turbo run build --force --no-cache --filter=./packages/**/*",
        "check": "npm run commit-check && turbo run test lint --parallel --filter=./packages/**/*",
        "test": "turbo run test --parallel",
        "lint": "turbo run lint --parallel --filter=./packages/**/*",
        "type-check": "turbo run type-check --parallel --filter=./packages/**/*",
        "commit-check": "commitlint --from=HEAD~1 --verbose",
        "dev": "turbo run dev --filter=./packages/**/*",
        "clean:dist": "rm -rf ./packages/**/*dist",
        "clean:node": "rm -rf ./packages/**/*node_modules"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/css.git"
    },
    "workspaces": [
        "packages/*",
        "packages/language-service/server",
        "packages/language-service/client",
        "examples/*"
    ],
    "devDependencies": {
        "aronrepo": "^1.0.0-beta.38",
        "concurrently": "^7.6.0",
        "dedent": "^0.7.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "fast-glob": "^3.2.12",
        "jest-environment-jsdom": "^29.3.1",
        "jest-puppeteer": "^6.1.1",
        "puppeteer": "^19.2.2"
    },
    "engines": {
        "node": "^18"
    }
}
