{
    "name": "@master/css",
    "scripts": {
        "build": "rm -rf dist && npm run build:cjs && npm run build:esm",
        "build:cjs": "esbuild src/index.ts --outfile=dist/index.js --minify --bundle --format=cjs --sourcemap",
        "build:esm": "tsc",
        "dev:cjs": "esbuild src/index.ts --outfile=dist/index.js --bundle --format=cjs --watch",
        "dev:esm": "tsc --watch",
        "test": "jest"
    },
    "devDependencies": {
        "@types/jest": "^27.5.2",
        "@types/node": "^18.11.0",
        "dedent": "^0.7.0",
        "esbuild": "^0.15.10",
        "esbuild-jest": "^0.5.0",
        "jest": "^28.1.3",
        "ts-jest": "^28.0.3",
        "typescript": "^4.8.4"
    },
    "files": [
        "dist"
    ]
}