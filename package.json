{
    "private": true,
    "scripts": {
        "postinstall": "husky install && npm ls --link=true",
        "build": "turbo run build",
        "build:clean": "rm -rf ./packages/**/*dist && turbo run build --force --no-cache --filter=./packages/**/*",
        "check": "npm run commit-check && npm run build && turbo run test lint type-check --parallel --filter=./packages/**/*",
        "test": "turbo run test --parallel",
        "lint": "turbo run lint --parallel --filter=./packages/**/*",
        "type-check": "turbo run type-check --parallel --filter=./packages/**/*",
        "commit-check": "commitlint --from=HEAD~1 --verbose",
        "dev": "turbo run dev --filter=./packages/**/*",
        "clean": "rm -rf package-lock.json && rm -rf node_modules && rm -rf ./packages/**/*dist && rm -rf ./{examples,packages}/**/*node_modules && rm -rf ./{examples,packages}/**/*.turbo"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/css.git"
    },
    "workspaces": [
        "packages/**",
        "examples/*",
        "shared/"
    ],
    "devDependencies": {
        "@techor/jest-dom": "^2.2.8",
        "@techor/repo": "^2.2.8",
        "@types/jest": "^29.5.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "fast-glob": "^3.2.12",
        "jest-extended": "^4.0.0",
        "nodemon": "^2.0.22",
        "pretty-ms": "^8.0.0",
        "puppeteer": "^19.8.5",
        "shared": "",
        "shuffle-array": "^1.0.1",
        "strip-ansi": "^7.0.1",
        "techor": "^2.2.8",
        "ts-dedent": "^2.2.0",
        "ts-jest": "^29.1.0",
        "tsx": "^3.12.7",
        "turbo": "^1.10.3",
        "upath": "^2.0.1"
    },
    "engines": {
        "node": "^18"
    }
}