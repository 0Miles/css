{
    "private": true,
    "scripts": {
        "postinstall": "husky install && npm ls --link=true",
        "build": "npm run build:packages && npm run build:examples",
        "build:packages": "turbo run build --filter=./packages/**/* && npm i",
        "build:examples": "turbo run build --filter=./examples/**/* --parallel --concurrency=30",
        "check": "npm run commit-check && npm run build && turbo run test lint type-check --parallel --filter=./packages/**/*",
        "test": "turbo run test --parallel --filter=./packages/**/*",
        "lint": "turbo run lint --parallel --filter=./packages/**/*",
        "type-check": "turbo run type-check --parallel --filter=./packages/**/*",
        "commit-check": "commitlint --from=HEAD~1 --verbose",
        "dev": "turbo run dev --filter=./packages/* --no-cache --force --concurrency=30",
        "clean": "rm -rf package-lock.json && rm -rf node_modules && rm -rf ./packages/**/*dist && rm -rf ./{examples,packages}/**/*node_modules && rm -rf ./{examples,packages}/**/*.turbo"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/css.git"
    },
    "workspaces": [
        "packages/*",
        "examples/*",
        "shared/"
    ],
    "devDependencies": {
        "@techor/jest-dom": "^2.3.8",
        "@techor/repo": "^2.3.8",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.4.0",
        "concurrently": "^8.2.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "fast-glob": "^3.2.12",
        "jest-extended": "^4.0.0",
        "nanoid": "^4.0.2",
        "nodemon": "^2.0.22",
        "pretty-ms": "^8.0.0",
        "puppeteer": "^20.8.0",
        "shared": "",
        "shuffle-array": "^1.0.1",
        "spawnd": "^9.0.0",
        "strip-ansi": "^7.1.0",
        "ts-dedent": "^2.2.0",
        "ts-jest": "^29.1.1",
        "tsx": "^3.12.7",
        "turbo": "^1.10.7",
        "upath": "^2.0.1"
    },
    "engines": {
        "node": "^18"
    },
    "dependencies": {
        "@master/css": "*",
        "@master/css-extractor": "*",
        "@master/css-renderer": "*",
        "jest": "^29.6.1"
    }
}
