{
    "name": "@master/css",
    "scripts": {
        "build:cjs": "esbuild src/index.ts --outfile=dist/index.js --bundle --format=cjs",
        "build:esm": "tsc",
        "dev:cjs": "npm run build:cjs -- --watch",
        "dev:esm": "npm run build:esm -- --watch",
        "prod": "rm -rf dist && npm run build:cjs -- --minify --sourcemap && npm run build:esm",
        "test": "jest",
        "lint": "eslint ./src"
    },
    "devDependencies": {
        "@semantic-release/exec": "^6.0.3",
        "@swc/core": "^1.3.9",
        "@swc/jest": "^0.2.23",
        "@types/jest": "^27.5.2",
        "@types/node": "^18.11.0",
        "@typescript-eslint/eslint-plugin": "^5.40.1",
        "@typescript-eslint/parser": "^5.40.1",
        "dedent": "^0.7.0",
        "esbuild": "^0.15.10",
        "eslint": "^8.25.0",
        "jest": "^28.1.3",
        "semantic-release": "^19.0.5",
        "ts-jest": "^28.0.3",
        "typescript": "^4.8.4"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=17.1"
    }
}
