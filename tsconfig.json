{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2015",
        "module": "es2020",
        "skipLibCheck": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@master/style": [
                "../style/src"
            ],
            "@master/style/*": [
                "../style/src/*"
            ]
        }
    },
    "include": [
        "./src/**/*index.ts",
        "./src/**/*.d.ts",
        "./dev/src/**/*index.ts",
        "./dev/src/**/*.d.ts"
    ],
    "exclude": [
        "./src/node_modules"
    ]
}