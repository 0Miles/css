{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./",
        "sourceMap": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "ESNext",
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "lib": [
            "es2021",
            "dom"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts"
    ],
    "exclude": [
        "./src/node_modules"
    ]
}