{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./",
        "sourceMap": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2015",
        "module": "es2020",
        "allowJs": true,
        "skipLibCheck": true,
        "lib": [
            "es2021",
            "dom"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts",
        "./dev/src/**/*index.ts",
        "./dev/src/**/*.d.ts"
    ],
    "exclude": [
        "./src/node_modules"
    ]
}