{
    "compilerOptions": {
        "outDir": "./dist/esm",
        "baseUrl": "./",
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowJs": true,
        "target": "ESNext",
        "module": "ESNext",
        "skipLibCheck": true,
        "declaration": true,
        "lib": [
            "es2021",
            "dom"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts"
, "src/plugins/libs/extractClasses.js", "src/plugins/libs/generateCSSTextFromChanges.js", "src/plugins/libs/initCSS.js", "src/plugins/webpack.js"    ],
    "exclude": [
        "./src/node_modules",
        "./src/**/*.test.ts"
    ]
}